<?xml version="1.0" encoding="UTF-8" ?>

<web-app>

    <listener>
        <listener-class>com.greetingcard.web.listener.ThymeleafInitializerListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllCardsServlet</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.card.AllCardsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllCardsServlet</servlet-name>
        <url-pattern>/all-cards</url-pattern>
        <url-pattern>/my-cards</url-pattern>
        <url-pattern>/another`s-cards</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.EditProfileUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCard</servlet-name>
        <servlet-class>com.greetingcard.web.servlet.card.CreateCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCard</servlet-name>
        <url-pattern>/create-card</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.greetingcard.web.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/create-card</url-pattern>
        <url-pattern>/all-cards</url-pattern>
        <url-pattern>/my-cards</url-pattern>
        <url-pattern>/another`s-cards</url-pattern>
    </filter-mapping>

</web-app>